<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mavidser.willow.MainMenu">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout2">

        <Button
            android:background="@color/light_blue_400"
            android:textColor="@color/grey_50"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:textSize="@dimen/abc_text_size_large_material"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_play_game"
            android:id="@+id/button_play"
            android:layout_gravity="center_horizontal"
            android:onClick="play" />

        <Button
            android:background="@color/light_blue_400"
            android:textColor="@color/grey_50"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:textSize="@dimen/abc_text_size_large_material"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_tutorial"
            android:id="@+id/button_tutorial"
            android:layout_gravity="center_horizontal"
            android:onClick="tutorial" />

        <Button
            android:background="@color/light_blue_400"
            android:textColor="@color/grey_50"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:textSize="@dimen/abc_text_size_large_material"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_practice"
            android:id="@+id/button_practice"
            android:layout_gravity="center_horizontal"
            android:onClick="practice" />

    </LinearLayout>



        <EditText
            android:hint="@string/entername"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/usrlevel"
            android:layout_width="match_parent"
            android:textColor="@color/grey_400"
            android:paddingBottom="25dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:layout_height="wrap_content"
            android:text="स्तर: 1"
            android:layout_alignTop="@id/button_practice"
            android:layout_alignRight="@+id/linearLayout2"
            android:layout_alignEnd="@+id/linearLayout2"
            android:layout_alignBottom="@+id/linearLayout2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New CheckBox"
        android:id="@+id/checkBox"
        android:layout_below="@+id/username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="612dp"
        android:layout_marginStart="612dp"
        android:layout_marginTop="91dp" />


</RelativeLayout>
