<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/blue_100"
    tools:context="mavidser.willow.PlayGame">

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" >

            <TextView android:text="" android:layout_width="wrap_content"
                android:textAllCaps="true"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/play_user" />
            <TextView android:text="0" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_headline_material"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/play_user_score" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

        <TextView android:text="5"
            android:textColor="@color/grey_400"
            android:id="@+id/timer"
            android:gravity="center"
            android:background="@drawable/circle_bg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="@dimen/abc_text_size_large_material"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </LinearLayout>





        <!--<ProgressBar-->
            <!--android:id="@+id/barTimer"-->
            <!--android:max="100"-->
            <!--style="?android:attr/progressBarStyleHorizontal"-->
            <!--android:layout_weight="1"-->
            <!--android:padding="34dp"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="69dp"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:progressDrawable="@drawable/circular_progres_bar"-->
            <!--android:layout_gravity="center_horizontal" />-->





        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" >

            <TextView android:text="" android:layout_width="wrap_content"
                android:textAllCaps="true"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/play_opponent" />
            <TextView android:text="0" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_headline_material"
                android:layout_gravity="right"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/play_opponent_score" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
